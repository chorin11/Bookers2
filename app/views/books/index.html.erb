<h1 class=title1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th><th>Opinion</th>
		</tr>
	</thead>

<header>
	<h4>Bookers</h4>
		<% if user_signed_in? %>
    <ul class="nav-list">
        <li><%= link_to "Home", '/users/edit'%></li>
        <li><%= link_to "Users", destroy_user_session_path, method: :delete %></li>
        <li><%= link_to "Books", books_path, class: 'post' %></li>
        <li><%= link_to "logout", new_user_registration_path, class: 'post' %></li>
    </ul>
    <% else %>
    <ul>
      <li><%= link_to "Home",'/layouts/apprication'%></li>
      <li><%= link_to "About", destroy_user_session_path, method: :delete %></li>
      <li><%= link_to "sign up", new_user_registration_path, class: 'post' %></li>
      <li><%= link_to "login", new_user_registration_path, class: 'post' %></li>
    </ul>
    <% end %>
</header>

<% @books.each do |book| %>
    <tr>
     <div>
      <td><%= book.title %></td>
     </div>
     <div>
    	<td><%= book.body %></td>
     </div>
      <span>
      <td><%=link_to "Show" ,book_path(book.id) %></td>
      <td><%=link_to "Edit" ,edit_book_path(book.id) %></td>
      <td><%=link_to "Destroy" ,book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </span>
    </tr>
  <% end %>
</table>

<h1>User info</h1>
<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <%= image_tag('sample-author1.jpg', class: "img-circle pull-left profile-img", style: "width: 100px; height: 100px;") %>
　<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
  <% end %></div>

<h1>New book</h1>
<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message+"error" %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>


  <div><%= f.submit 'Create Book' %></div>
<% end %>