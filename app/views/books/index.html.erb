<div class="body">
  <div class="container">
    <div class="row">
      <h1 class=title1>Books</h1>

        <div class="col-xs-3">
          <h2>User info</h2>
            <img class="attachment user profile_image fallback">
              <table class="table">
                <tbody>
                  <tr></tr>
                  <tr>
                    <th>name</th>
                    <th></th>
                  </tr>
                  <tr>
                    <th>introduction</th>
                    <th></th>
                  </tr>
                </tbody>
              </table>
        </div>
    </div>
  </div>
</div>

    <%= link_to edit_user_registration_path(@user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_21099" %>

  <h2>New book</h2>
    <% if @book.errors.any? %>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message+"error" %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :Title %>

      <h4>Body</h4>
      <%= f.text_area :Opinion %>

      <div><%= f.submit 'Create Book' %></div>
    <% end %>
</div>

<div class="col-xs-9">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
	   <thead>
		    <tr>
			   <th>Title</th><th>Opinion</th>
		    </tr>
	   </thead>

      <% @books.each do |book| %>
        <tr>
         <div>
          <td><%= book.title %></td>
         </div>
         <div>
        	<td><%= book.body %></td>
         </div>
          <span>
          <td><%=link_to "Edit" ,edit_book_path(book.id) %></td>
          <td><%=link_to "Destroy" ,book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
          </span>
        </tr>
      <% end %>
     </table>
</div>